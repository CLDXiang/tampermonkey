{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.mts"
  ]
}
